<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JwellaryAppPOC.View.SelectedItemDetailsPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Margin="0,30,0,0">
            <Label x:Name="SelectedItemName" Text="{Binding SelectedItemName}"
                   Style="{StaticResource HeaderLabel}"/>
            <Image x:Name="SelectedItemImage" Source="{Binding SelectedItemImage}"/>
            <Label x:Name="SelectedItemPrice" Text="{Binding SelectedItemPrice}"
                   Style="{StaticResource HeaderLabel}"/>
            <Label x:Name="SelectedItemDiscription" Text="{Binding SelectedItemDiscription}"
                    Style="{StaticResource TextLabel}"/>
            <Button Text="Buy Now"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>